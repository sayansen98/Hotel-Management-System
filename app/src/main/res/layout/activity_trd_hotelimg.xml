<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trd_hotelimg">
    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
        android:background="@drawable/unnamed"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="290dp"
            android:background="@android:color/transparent"
            android:id="@+id/image3"/>
        <TextView
            android:id="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="hotel name"
            android:textColor="#723972"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/tt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"

            android:text="rate per person 1200/-"
            android:textColor="#723972"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/tt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#723972"
            android:text="Its a 2 bed ac room nice view from balcony you can enjoy the view food is included with it "
            android:textSize="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="number of person"
            android:textColorHint="#723972"
            android:id="@+id/numperson"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="book now"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:textColor="#723972"
            android:layout_marginTop="10dp"
            android:id="@+id/btn9"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>



</LinearLayout>